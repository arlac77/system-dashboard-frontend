{
  "name": "system-dashboard-frontend",
  "version": "0.0.0-semantic-release",
  "description": "web frontend of the system dashboard",
  "keywords": [
    "svelte",
    "web"
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "rollup -c",
    "start": "rollup -c -w"
  },
  "dependencies": {
    "@kronos-integration/svelte-components": "https://github.com/Kronos-Integration/svelte-components.git",
    "mf-styling": "arlac77/mf-styling",
    "svelte-common": "^2.0.3",
    "svelte-guard-history-router": "^1.3.0",
    "svelte-log-view": "^1.2.1",
    "svelte-session-manager": "^1.1.0",
    "svelte-websocket-store": "^1.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-inject": "^4.0.2",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@rollup/plugin-virtual": "^2.0.2",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "npm-pkgbuild": "^6.12.1",
    "postcss-import": "^12.0.1",
    "rollup": "^2.15.0",
    "rollup-plugin-consts": "^1.0.2",
    "rollup-plugin-dev": "^1.1.2",
    "rollup-plugin-postcss": "^3.1.2",
    "rollup-plugin-svelte": "git+https://github.com/ctavan/rollup-plugin-svelte.git#handle-missing-exports-gracefully",
    "rollup-plugin-terser": "^6.1.0",
    "semantic-release": "^17.0.8",
    "svelte": "^3.23.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/system-dashboard-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/system-dashboard-frontend/issues"
  },
  "homepage": "https://github.com/arlac77/system-dashboard-frontend#readme",
  "config": {
    "api": "/services/system-dashboard/api",
    "api_ws": "wss://mfelten.dynv6.net/services/system-dashboard/api",
    "base": "/services/system-dashboard",
    "journalApi": "/services/journal",
    "proxyTarget": "https://mfelten.dynv6.net/services/journal/"
  },
  "pacman": {
    "groups": "monitoring",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/system-dashboard/frontend",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=245.6",
      "nginx-mainline": ">=1.19.0"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-svelte-app",
      "arlac77/template-github"
    ]
  }
}
