{
  "name": "system-dashboard-frontend",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "web frontend of the system dashboard",
  "keywords": [
    "svelte",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "rollup -c rollup.config.mjs",
    "start": "rollup -c -w rollup.config.mjs"
  },
  "dependencies": {
    "@kronos-integration/svelte-components": "^1.1.35",
    "mf-styling": "arlac77/mf-styling",
    "reader-line-iterator": "^1.0.0",
    "svelte-common": "^2.19.0",
    "svelte-guard-history-router": "^3.2.1",
    "svelte-log-view": "^4.2.3",
    "svelte-session-manager": "^1.1.8",
    "svelte-websocket-store": "^1.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-virtual": "^2.0.3",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "npm-pkgbuild": "^6.12.13",
    "postcss-import": "12.0.1",
    "rollup": "^2.33.1",
    "rollup-plugin-consts": "^1.0.2",
    "rollup-plugin-dev": "^1.1.2",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-svelte": "^6.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^17.2.2",
    "svelte": "^3.29.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/system-dashboard-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/system-dashboard-frontend/issues"
  },
  "homepage": "https://github.com/arlac77/system-dashboard-frontend#readme",
  "config": {
    "api": "/services/system-dashboard/api",
    "api_ws": "wss://mfelten.dynv6.net/services/system-dashboard/api",
    "base": "/services/system-dashboard",
    "journalApi": "/services/journal",
    "proxyTarget": "https://mfelten.dynv6.net/services/journal/",
    "title": "System Dashboard"
  },
  "pacman": {
    "groups": "monitoring",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/system-dashboard/frontend",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=246.6",
      "nginx-mainline": ">=1.19.3",
      "system-dashboard": ">=1.25.0"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-github-action",
      "arlac77/template-svelte-app",
      "arlac77/template-arlac77-github"
    ]
  }
}
