{
  "name": "system-dashboard-frontend",
  "version": "0.0.0-semantic-release",
  "description": "web frontend of the system dashboard",
  "scripts": {
    "prepare": "rollup -c",
    "start": "light-server -s public --servePrefix /services/system-dashboard --historyindex /services/system-dashboard/index.html -p 5000 --proxypath / -x https://mfelten.dynv6.net/services/journal/ -w 'src/**,public/*.css # rollup -c'"
  },
  "dependencies": {
    "mf-styling": "git+https://github.com/arlac77/mf-styling.git"
  },
  "devDependencies": {
    "@semantic-release/exec": "^3.3.6",
    "light-server": "^2.6.3",
    "npm-pkgbuild": "^6.9.0",
    "rollup": "^1.20.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^5.1.1",
    "semantic-release": "^15.13.24",
    "svelte": "^3.9.1"
  },
  "engines": {
    "node": ">=12.9.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/system-dashboard-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/system-dashboard-frontend/issues"
  },
  "homepage": "https://github.com/arlac77/system-dashboard-frontend#readme",
  "config": {
    "api": "/",
    "proxyTarget": "https://mfelten.dynv6.net/services/journal/",
    "urlPrefix": "/services/system-dashboard",
    "journalUrlPrefix": "/services/journal"
  },
  "pacman": {
    "groups": "monitoring",
    "hooks": "pacman/install.sh",
    "installdir": "/services/system-dashboard/frontend",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=241.0",
      "nginx-mainline": ">=1.17.3"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template-svelte-app.git"
    }
  }
}
