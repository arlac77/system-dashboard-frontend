{
  "name": "system-dashboard-frontend",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "frontend for the system dashboard",
  "keywords": [
    "svelte",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "lint": "npm run lint:css",
    "lint:css": "stylelint ./src/*.css"
  },
  "dependencies": {
    "@kronos-integration/svelte-components": "^2.4.93",
    "mf-styling": "^1.7.33",
    "reader-line-iterator": "^1.1.5",
    "svelte-command": "^1.1.29",
    "svelte-common": "^4.21.13",
    "svelte-guard-history-router": "^5.5.20",
    "svelte-log-view": "^4.2.14",
    "svelte-session-manager": "^2.0.11",
    "svelte-websocket-store": "^1.1.33"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "npm-pkgbuild": "^10.19.10",
    "semantic-release": "^20.0.2",
    "stylelint": "^14.8.2",
    "stylelint-config-standard": "^29.0.0"
  },
  "optionalDependencies": {
    "mf-hosting-frontend": "^1.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/system-dashboard-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/system-dashboard-frontend/issues"
  },
  "homepage": "https://github.com/arlac77/system-dashboard-frontend#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "hooks": "pkg/hooks.sh",
    "depends": {
      "system-dashboard": ">=1.25.88"
    },
    "install.dir": "${install.base.dir}system-dashboard/frontend/",
    "journal.endpoint": "/services/journal",
    "http.path": "${http.base.path}/entitlements",
    "title": "System Dashboard",
    "frontend": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "alrac77/template-systemd",
      "arlac77/template-arlac77-github",
      "arlac77/template-svelte-app"
    ]
  }
}
