{
  "name": "system-dashboard-frontend",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "frontend for the system dashboard",
  "keywords": [
    "svelte",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "rollup -c rollup.config.mjs && rollup -c",
    "start": "rollup -c -w rollup.config.mjs && rollup -c -w",
    "lint": "npm run lint:css",
    "lint:css": "stylelint ./src/*.css"
  },
  "dependencies": {
    "@kronos-integration/svelte-components": "^2.4.93",
    "mf-styling": "^1.7.14",
    "reader-line-iterator": "^1.1.5",
    "svelte-command": "^1.1.24",
    "svelte-common": "^4.19.7",
    "svelte-guard-history-router": "^5.4.3",
    "svelte-log-view": "^4.2.14",
    "svelte-session-manager": "^2.0.11",
    "svelte-websocket-store": "^1.1.33"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^14.0.0",
    "@rollup/plugin-virtual": "^2.1.0",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "npm-pkgbuild": "^10.7.6",
    "postcss": "^8.4.13",
    "postcss-import": "^15.0.0",
    "rollup": "^2.73.0",
    "rollup-plugin-consts": "^1.1.0",
    "rollup-plugin-dev": "^2.0.3",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^19.0.2",
    "stylelint": "^14.8.2",
    "stylelint-config-standard": "^28.0.0",
    "svelte": "^3.48.0"
  },
  "optionalDependencies": {
    "mf-hosting": "^1.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/system-dashboard-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/system-dashboard-frontend/issues"
  },
  "homepage": "https://github.com/arlac77/system-dashboard-frontend#readme",
  "config": {
    "api": "/services/system-dashboard/api",
    "api_ws": "wss://mfelten.dynv6.net/services/system-dashboard/api",
    "base": "/services/system-dashboard",
    "journal.endpoint": "/services/journal",
    "proxyTarget": "https://mfelten.dynv6.net/services/journal/",
    "title": "System Dashboard"
  },
  "pkgbuild": {
    "content": {
      "${install.dir}": "public/",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "hooks": "pkg/hooks.sh",
    "depends": {
      "system-dashboard": ">=1.25.88"
    },
    "install.dir": "${install.base.dir}system-dashboard/frontend/"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --verbose"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "alrac77/template-systemd",
      "arlac77/template-arlac77-github",
      "arlac77/template-svelte-app"
    ]
  }
}
